<mvc:View xmlns:mvc="sap.ui.core.mvc"
          controllerName="sources.controllers.Column"
          xmlns:viz.data="sap.viz.ui5.data"
          xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
          xmlns:viz="sap.viz.ui5.controls" xmlns:chart="sap.suite.ui.commons"
          xmlns:suite="sap.suite.ui.microchart"
          xmlns="sap.m">

    <Page title="Service Diagram">
        <content>
            <VBox>
                <FlexBox id="chartContainer" width="100%" height="100%" renderType="Bare"
                         class="sapUiSmallMargin">
                    <items>
                        <suite:ColumnMicroChart width="100%"
                                                press="press"
                                                class="sapUiSmallMargin"
                                                allowColumnLabels="true">

                            <suite:columns>
                                <suite:ColumnMicroChartData value="{users>all}" label="all" color="sapUiChartPaletteQualitativeHue9"/>
                                <suite:ColumnMicroChartData value="{users>waiting4Response}" label="waiting4Response" color="sapUiChartPaletteQualitativeHue1"/>
                                <suite:ColumnMicroChartData value="{users>completed}" label="completed" color="sapUiChartPaletteQualitativeHue9"/>
                                <suite:ColumnMicroChartData value="{users>success}" label="success" color="sapUiChartPaletteQualitativeHue3"/>
                                <suite:ColumnMicroChartData value="{users>useless}" label="useless" color="sapUiChartPaletteQualitativeHue2"/>
                                <suite:ColumnMicroChartData value="{users>failed}" label="failed" color="sapUiChartPaletteQualitativeHue4"/>
                            </suite:columns>
                        </suite:ColumnMicroChart>
                    </items>
                </FlexBox>
            </VBox>
        </content>
    </Page>
</mvc:View>